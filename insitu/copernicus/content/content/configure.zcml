<configure xmlns="http://namespaces.zope.org/zope"
           i18n_domain="eea">

  <adapter
    name="insitu.copernicus.content.fields"
    for="insitu.copernicus.content.content.interfaces.ILandContent"
    factory=".subtypes.Extender" />

  <adapter
    name="insitu.copernicus.content.itemfields"
    for="insitu.copernicus.content.content.interfaces.ILandItem"
    factory=".subtypes.LandItemExtender" />

  <adapter
    name="insitu.copernicus.content.newsitemfields"
    for="Products.ATContentTypes.interfaces.news.IATNewsItem"
    factory=".subtypes.ATNewsItemExtender" />

  <adapter
    name="insitu.copernicus.content.atblob"
    for="plone.app.blob.interfaces.IATBlob"
    factory=".subtypes.ATBlobModifier" />

  <subscriber
    for="Products.ATContentTypes.interface.IATFile zope.lifecycleevent.interfaces.IObjectModifiedEvent"
    handler=".add.handler" />

  <subscriber
    for="Products.ATContentTypes.interface.IATFile zope.lifecycleevent.interfaces.IObjectModifiedEvent"
    handler=".edit.handler" />

  <adapter
    name="insitu.copernicus.content.landfile"
    for="insitu.copernicus.content.content.interfaces.ILandFile"
    factory=".landfile.SchemaExtender" />

</configure>
